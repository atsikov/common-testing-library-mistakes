{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["DOM", "ES5", "ES6", "ES2015", "ES2016"],
    "jsx": "react-jsx",
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "incremental": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}

